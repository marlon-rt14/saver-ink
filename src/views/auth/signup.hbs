<div class="container mt-5">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Sign Up</h1>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
            <div class="container text-center mb-3">
              <img src="img/logo.png" alt="logo" class="rounded-circle w-50" />
            </div>
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                placeholder="Fullname"
                name="fullname"
                autofocus
              />
            </div>
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                placeholder="Username"
                name="username"
              />
            </div>
            <div class="mb-5">
              <input
                type="password"
                class="form-control"
                placeholder="Password"
                name="password"
              />
            </div>
            <div class="d-grid">
              <button class="btn btn-success col-8 mx-auto">Sing up</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>