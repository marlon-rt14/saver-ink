<div class="container mt-5">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/edit/{{link.id_link}}" method="POST">
            <div class="mb-3">
              <input
                type="text"
                class="form-control text-uppercase"
                placeholder="Titulo"
                name="title"
								value="{{link.title}}"
								autofocus
              />
            </div>
            <div class="mb-3">
              <input
                type="url"
                class="form-control"
                placeholder="URL"
                name="url"
								value="{{link.url}}"
              />
            </div>
            <div class="mb-3">
              <textarea
                name="description"
                class="form-control"
                placeholder="Descripcion de la pagina"
              >{{link.description}}</textarea>
            </div>
						<div class="d-grid">
							<button class="btn btn-success">Enviar</button>
						</div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>